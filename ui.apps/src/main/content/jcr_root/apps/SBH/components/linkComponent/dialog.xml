<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Link Text Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Link Page Components">
                <items jcr:primaryType="cq:WidgetCollection">
                    <displaytext
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter Text to be Displayed"
                        fieldLabel="Display Text"
                        name="./linkpage"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Link"
                        name="./link"
                        xtype="textfield"/>
                    <newWindow
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open The Link in New Window"
                        name="./select"
                        xtype="checkbox"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
