<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab View Component">
                <items jcr:primaryType="cq:WidgetCollection">
                    <displaytext
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter Text to be Displayed on the Tab"
                        fieldLabel="Display Text on Tab"
                        name="./tabtitletext1"
                        xtype="textfield"/>
                    <genTab
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Create Tab"
                        name="./select"
                        xtype="checkbox"/>
                    <genparsys
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="Enter number to generate the number of parsys"
                        fieldLabel="Enter No of Parsys to Generate"
                        name="./genparsys"
                        xtype="numberfield"/>
                    <genrows
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="Enter number to generate the number of rows"
                        fieldLabel="Enter No of Rows to Generate"
                        name="./genrows"
                        xtype="numberfield"/>
                    <gendate
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Select The Date"
                        name="./dtfield"
                        xtype="datefield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
